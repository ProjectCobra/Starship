<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CALVRI</title>
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Fonts -->
    <link href="../font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="../Content/animate.css" rel="stylesheet" />
    <!-- Squad theme CSS -->
    <link href="../Content/style.css" rel="stylesheet">
    <link href="../color/default.css" rel="stylesheet">
    <!-- Core JavaScript Files -->
    <script src=@Url.Content("../Scripts/jquery.min.js")></script>
    <script src=@Url.Content("../Scripts/bootstrap.min.js")></script>
    <script src=@Url.Content("../Scripts/jquery.easing.min.js")></script>
    <script src=@Url.Content("../Scripts/jquery.scrollTo.js")></script>
    <script src=@Url.Content("../Scripts/wow.min.js")></script>
    <!-- Custom Theme JavaScript -->
    <script src=@Url.Content("../Scripts/custom.js")></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</head>

<body id="page-top" data-spy="scroll" data-target=".navbar-custom">
    <!-- Preloader -->
    <div id="preloader">
        <div id="load"></div>
    </div>

    <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
                    <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" style="padding-top:0px;">
                    <img src="~/img/logo.png" style="max-height:150px; max-width:150px;"/>
                </a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
                <ul class="nav navbar-nav">
                    <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li><a href="#about">About</a></li>
                    <li><a href="#service">CNIC</a></li>
                    <li><a href="#contact">Warden</a></li>
                    <li><a href="#contact1">Contact</a></li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    @RenderBody()
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-12">
                    <div class="wow shake" data-wow-delay="0.4s">
                        <div class="page-scroll marginbot-30">
                            <a href="#intro" id="totop" class="btn btn-circle">
                                <i class="fa fa-angle-double-up animated"></i>
                            </a>
                        </div>
                    </div>
                    <p>&copy;Copyright 2014 - CALVRI. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>


</body>
